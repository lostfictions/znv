{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "node18",
    "moduleResolution": "node16",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
}
